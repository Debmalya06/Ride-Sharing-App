# ============================================
# Docker Compose Environment Configuration
# ============================================
# Copy this file to .env and update with your values
# DO NOT commit the actual .env file to git

# ============================================
# Database Configuration
# ============================================
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=your_secure_database_password_here

# ============================================
# JWT Configuration
# ============================================
# Generate a secure random string for production
# Option 1: openssl rand -base64 32
# Option 2: Use: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
JWT_SECRET=your_very_secure_jwt_secret_key_change_me_in_production
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# ============================================
# Email Configuration (SMTP)
# ============================================
# For Gmail: Use App Passwords (not your regular password)
# Setup: https://support.google.com/accounts/answer/185833
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your_app_specific_password_here

# ============================================
# Email Settings
# ============================================
APP_EMAIL_FROM=SmartRide <noreply@smartride.com>
APP_EMAIL_SUPPORT=support@smartride.com

# ============================================
# Razorpay Configuration
# ============================================
# Get keys from: https://dashboard.razorpay.com/
# For testing: Use test keys (start with rzp_test_)
# For production: Use live keys (start with rzp_live_)
RAZORPAY_KEY_ID=rzp_test_your_test_key_id_here
RAZORPAY_KEY_SECRET=your_test_key_secret_here
RAZORPAY_CURRENCY=INR
RAZORPAY_COMPANY_NAME=SmartRide

# ============================================
# Application Settings
# ============================================
# The URL where frontend is accessible
APP_BASE_URL=http://localhost:5173

# Platform commission percentage
APP_PLATFORM_COMMISSION=10.0

# ============================================
# Fare Configuration
# ============================================
APP_FARE_BASE=50.00
APP_FARE_RATE_PER_KM=3.00
APP_FARE_MIN_FARE=50.00
APP_FARE_MAX_FARE=5000.00
APP_FARE_CURRENCY=INR

# ============================================
# Reminder Configuration
# ============================================
APP_REMINDERS_SCHEDULING_ENABLED=true
APP_REMINDERS_RETRY_MAX_ATTEMPTS=3
APP_REMINDERS_EMAIL_ENABLED=true
APP_REMINDERS_SMS_ENABLED=false

# ============================================
# Java/Backend Configuration
# ============================================
# Heap memory: adjust based on available RAM
# For 4GB RAM: -Xms512m -Xmx1024m
# For 8GB RAM: -Xms1g -Xmx2g
JAVA_OPTS=-Xms512m -Xmx1024m

# ============================================
# Development Settings
# ============================================
# Set to false in production
APP_TEST_CONTROLLERS_ENABLED=true

# ============================================
# Logging
# ============================================
# Options: DEBUG, INFO, WARN, ERROR
LOG_LEVEL=INFO
SPRING_LOG_LEVEL=INFO
